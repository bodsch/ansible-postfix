
{% if postfix_recipient.bcc_maps is defined and
      postfix_recipient.bcc_maps | string | length > 0 %}
recipient_bcc_maps                        = {{ postfix_recipient.bcc_maps }}
{% endif %}
{% if postfix_recipient.canonical_classes is defined and
      postfix_recipient.canonical_classes | string | length > 0 %}
recipient_canonical_classes               = {{ postfix_recipient.canonical_classes }}
{% endif %}
{% if postfix_recipient.canonical_maps_files is defined and
      postfix_recipient.canonical_maps_files | length > 0 %}
  {% if postfix_recipient.canonical_maps_files is string %}
recipient_canonical_maps                  = {{ postfix_recipient.canonical_maps_files }}
  {% else %}
recipient_canonical_maps                  =
    {{ postfix_recipient.canonical_maps_files | join("\n") | indent(4) }}
  {% endif %}
{% endif %}
{% if postfix_recipient.delimiter is defined and
      postfix_recipient.delimiter | string | length > 0 %}
recipient_delimiter                       = {{ postfix_recipient.delimiter }}
{% endif %}
