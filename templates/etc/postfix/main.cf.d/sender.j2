
{% if postfix_sender.bcc_maps is defined and
      postfix_sender.bcc_maps | length > 0 %}
  {% if postfix_sender.bcc_maps | type == "list" %}
sender_bcc_maps                           =
    {{ postfix_sender.bcc_maps | join("\n") | indent(4) }}
  {% else %}
sender_bcc_maps                           = {{ postfix_sender.bcc_maps }}
  {% endif %}
{% endif %}

